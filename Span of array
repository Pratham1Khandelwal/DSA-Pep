#include<iostream>
using namespace std;

int main(){
    
    //write your code here
    int n;
    cin>>n;
    int na[n];
    for(int i=0;i<n;i++){
        cin>>na[i];
    }
    int max=na[0],min=na[0];
    for(int i=0;i<n;i++){
        if(na[i]>max){
            max=na[i];
        }
        else if(na[i]<min){
            min=na[i];
        }
    }
    cout<<max-min;
}
